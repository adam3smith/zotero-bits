<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="in-text">
  <info>
    <title>Blood</title>
    <id>http://www.zotero.org/styles/blood</id>
    <link href="http://www.zotero.org/styles/blood"/>
    <author>
      <name>Julien Charbon</name>
      <email>julien.charbon@gmail.com</email>
    </author>
    <category term="biology"/>
    <category term="generic-base"/>
    <category term="numeric"/>
    <updated/>
    <link href="http://bloodjournal.hematologylibrary.org/authors/article_structure.dtl#references" rel="documentation"/>
  </info>
  <macro name="title">
    <text variable="title" text-case="sentence"/>
  </macro>
  <macro name="author">
    <names variable="author">
      <name sort-separator=" " delimiter=", " initialize-with="" delimiter-precedes-last="always" name-as-sort-order="all"/>
    </names>
  </macro>
  <macro name="issuance">
    <choose>
      <if type="book">
        <text variable="publisher-place" suffix=": "/>
        <text variable="publisher" suffix="; "/>
        <text macro="issued-year" suffix="."/>
      </if>
      <else>
        <text variable="container-title" form="short" suffix=". "/>
        <text macro="issued-year" suffix=";"/>
        <text variable="volume" suffix=":"/>
        <text variable="page" suffix="."/>
      </else>
    </choose>
  </macro>
  <macro name="issued-year">
    <date form="year-month-day"/>
  </macro>
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>
  <bibliography et-al-min="6" et-al-use-first="3" second-field-align="true" entry-spacing="0">
    <layout>
      <text variable="citation-number" suffix="."/>
      <text macro="author" suffix="."/>
      <text macro="title" prefix=" " suffix=". "/>
      <text macro="issuance" suffix=". "/>
    </layout>
  </bibliography>
</style>
